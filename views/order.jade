extends layout

block content
  div.container
    div#order.col-md-6
      h3#orderid Id: #{order._id}
      h2#ordercustomer Name: #{ order.customer.companyName}
      h2#ordercustomercontact Contact: #{ order.customer.contactName}
      h2#orderemployee Employee: #{ order.employee.firstName}
      h3#ordercustomer Name: #{ order.customer}
      h3#orderdate Date: #{ order.orderDate}
      h3#orderrequired Require: #{ order.requiredDate}
      h3#ordershipped Shipped: #{ order.shippedDate}
      h3#ordername Shipname: #{ order.shipName}
      h3#orderadress Address: #{ order.shipAddress}
      h3#ordercity City: #{order.shipCity}
      h3#orderzip Zip: #{order.shipPostalCode}
      h3#ordercountry Country: #{order.shipCountry}
      br
      br
    div#table.container
      table.table
        tr
          th Product
          th UnitPrice
          th Quantity
          th Discount
          th Price  
        for detail in details
          tr
            td: p= detail.product.name
            td: p= detail.unitPrice
            td: p= detail.quantity 
            td: p= detail.discount
            td: p= detail.totalPrice

       a.btn.btn-warning.bottom(href='http://localhost:3000/') back