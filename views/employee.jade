extends layout

block content
  div.container
    div.col-md-6
      h3 Id: #{employee._id}
      h3 First Name: #{employee.firstName}
      h3 Last Name: #{employee.lastName}
      h3 Title: #{employee.title}
      h3 Birthday: #{employee.birthDate}
      h3 Hired: #{employee.hireDate}
    div.col-md-6
      h3 Address: #{employee.address}
      h3 City: #{employee.city}
      h3 Zip: #{employee.postalCode}
      h3 Country: #{employee.country}
      h3 Phone: #{employee.homePhone}
      h3 Ext: #{employee.extension}
  br
  div.container#notes
    h3 Notes:
    br
    p= employee.notes
  br
  div#backbutton.text-center  
    a.btn.btn-primary.bottom(onclick='history.go(-1);') back