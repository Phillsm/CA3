extends layout

block content
  div.container
    table.table.table-striped
      tr
        th Id
        th Date
        th Name
        th Address
        th Edit
        th Remove
      for val in orders
        tr
          td: a(href= 'http://178.62.15.16:3000/order/#{val._id}')= val._id
          td: p= val.orderDate
          td: P= val.shipName
          td: P= val.shipAddress
          td: button(type='button').btn.btn-sm.btn-default.glyphicon.glyphicon-edit
          td: button(type='button').btn.btn-sm.btn-danger.glyphicon.glyphicon-remove